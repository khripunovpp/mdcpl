header.header.js-sticky-header
    .header__mobileBg(aria-hidden="true")
        img(data-src='./img/mobile-menu-bg.jpg').lazy
    .container
        .header__inner
            .header__logo
                a(href="./").logo.logo--header.paste-sprite-logo
            section.header__nav
                nav.nav
                    ul.nav__list.js-navigation
                        li
                            a(href="./about/index.html") О нас
                        li
                            a(href="./services/index.html") Услуги
                        li
                            a(href="./team/index.html") Специалисты
                        li
                            a(href="./reviews/index.html") Отзывы
                        li
                            a(href="./faq/index.html") FAQ
                        li
                            a(href="./contacts/index.html") Контакты
                    .nav__bottom
                        .nav__bottom-element
                            a(href="https://t.me/MedCoupleBot",target='_blank').contact-link
                                i.contact-link__icon.icon.paste-sprite-telegram-icon
                                span.contact-link__label Telegram-бот
                        .nav__bottom-element
                            a(href="mailto:example@mail.com").contact-link
                                i.contact-link__icon.icon.paste-sprite-email-icon
                                span.contact-link__label example@mail.com
                        .nav__bottom-element
                            button(type='button').button.button--outlined.js-open-dialog(data-dialog-id="widget")
                                span Записаться на прием
                        .nav__bottom-element
                            button(type='button').button.button--outlined.button--accent.js-open-dialog(data-dialog-id="home-call")
                                span Выезд на дом
            section.header__phone
                a(href="https://t.me/MedCoupleBot",target='_blank').contact-link
                    i.contact-link__icon.icon.paste-sprite-telegram-icon
                    span.contact-link__label Telegram-бот

            section.header__splitButton
                .split-button
                    button(type='button').js-open-dialog(data-dialog-id="widget")
                        span Записаться
                    button(type='button').js-open-dialog(data-dialog-id="home-call")
                        i.icon.paste-sprite-plus-icon
                        span Выезд на дом

            button.header__burger.burger(type='button',aria-label='Открыть меню')
                .burger__icon
                    span
                    span
                    span
                    span
