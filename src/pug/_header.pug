                            a(href="./contacts/index.html") Контакты
                    .nav__bottom
                        .nav__bottom-element
                            .contact-link
                                i.icon.paste-sprite-telegram-icon
                                a(href="#") Telegram-бот
                        .nav__bottom-element
                            .contact-link
                                i.icon.paste-sprite-email-icon
