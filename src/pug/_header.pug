    .header__mobileBg(aria-hidden="true")
    .container
        .header__inner
            .header__logo
                a(href="./").header-logo.paste-sprite-logo
            section.header__nav
                nav.nav
                    ul.nav__list.js-navigation
                        li
                            a(href="./about/index.html") О нас
                        li
                            a(href="./services/index.html") Услуги
                        li
